<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nuevo Autor"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNombreActor"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_alignBaseline="@+id/etNombreActor"/>
    <EditText
        android:id="@+id/etNombreActor"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvNombreActor"/>
    <TextView
        android:id="@+id/tvApellidoActor"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNombreActor"
        android:text="Apellido"
        android:layout_alignBaseline="@+id/etApellidoActor"/>
    <EditText
        android:id="@+id/etApellidoActor"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvApellidoActor"
        android:layout_below="@+id/etNombreActor"/>
</RelativeLayout>

<Button
    android:id="@+id/btnPostActor"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="Guardar"/>

</LinearLayout>